<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/person"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <!-- Student's Name -->
    <TextView
        android:id="@+id/text_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />
    <!-- Student's ID -->
    <TextView
        android:id="@+id/text_student_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student ID: ABC123"
        android:textSize="16sp"
        android:layout_below="@id/text_student_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />
    <!-- Additional Information -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/text_student_id"
        android:padding="16dp">

        <!-- Field: Email -->
        <TextView
            android:id="@+id/text_email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_email_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="john@example.com"
            android:textSize="16sp" />

        <!-- Field: Department -->
        <TextView
            android:id="@+id/text_department_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/text_department_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer Science"
            android:textSize="16sp" />

        <!-- Add more fields as needed -->

    </LinearLayout>
</RelativeLayout>

</FrameLayout>